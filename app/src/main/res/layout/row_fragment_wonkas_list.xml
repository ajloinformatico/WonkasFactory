<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp8"
    android:layout_height="@dimen/dp200">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp8"
        android:background="@color/black"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_view_body"
            android:layout_width="match_parent"
            android:padding="@dimen/dp8"
            android:layout_height="match_parent">

            <View
                android:id="@+id/image_border"
                android:layout_width="@dimen/dp126"
                android:layout_height="@dimen/dp126"
                android:background="@color/white"
                android:backgroundTint="@color/black"
                app:layout_constraintTop_toTopOf="@id/card_view_body"
                app:layout_constraintStart_toStartOf="@id/card_view_body"
            />


            <ImageView
                android:id="@+id/wonka_image"
                android:layout_width="120dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                android:layout_height="120dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:contentDescription="@string/wonka_image"
                app:layout_constraintTop_toTopOf="@id/image_border"
                app:layout_constraintStart_toStartOf="@id/image_border"
                app:layout_constraintEnd_toEndOf="@id/image_border"
                app:layout_constraintBottom_toBottomOf="@id/image_border"

                />

            <TextView
                android:id="@+id/wonka_name"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                tools:text="Antonio JosÃ© Lojo"
                android:gravity="center"
                style="@style/CustomCardViewTitle"
                app:layout_constraintStart_toEndOf="@id/image_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>